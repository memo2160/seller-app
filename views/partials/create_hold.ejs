<div class="container" id="custom-container">
    <div class=" text-center mt-5 ">
  
        <h1 >Create Hold</h1>
            
        
    </div>
  
  
  <div class="row ">
  <div class="col-lg-7 mx-auto">
    <div class="card mt-2 mx-auto p-4 bg-light">
        <div class="card-body bg-light">
   
        <div class = "container">
                         <form action="/request" method="POST">
  
        
  
        <div class="controls">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="merchant" class="font-weight-bold">Choose Drop Off Location:</label>
                     <select id="merchant" name="merchant">
                        <% merchantNames.forEach(merchant => { %>
                         <option value="<%= merchant.id %>"><%= merchant.name %></option>
                        <% }); %>
                        </select>
                        
                    </div>
                </div>
               
                </div>
          <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                   <p class="font-weight-bold">Droppers Information:</p>
                    
                </div>
            </div>
        </div>
        
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="dropper_fname">Firstname *</label>
                        <input id="d_fname" type="text" name="d_fname" class="form-control" placeholder="Please enter  firstname *" required="required" data-error="Firstname is required.">
                        
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="dropper_lname">Lastname *</label>
                        <input id="d_lname" type="text" name="d_lname" class="form-control" placeholder="Please enter lastname *" required="required" data-error="Lastname is required.">
                                                        </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="dropper_email">Email *</label>
                        <input id="d_email" type="email" name="d_email" class="form-control" placeholder="Please enter  email *" required="required" data-error="Valid email is required.">
                        
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="dropper_phone">Mobile Phone # *</label>
                        <input id="d_tel" type="tel" name="d_tel" class="form-control" placeholder="Please enter cell phone # *" required="required" data-error="Valid phone # is required.">
                        
                    </div>
                </div>
            </div>
            <div class="row">
              <div class="col-md-6">
                  <div class="form-group">
                     <p class="font-weight-bold">Recievers Information:</p>
                      
                  </div>
              </div>
          </div>
    <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="reciever_fname">Firstname *</label>
                        <input id="r_fname" type="text" name="r_fname" class="form-control" placeholder="Please enter firstname *" required="required" data-error="Firstname is required.">
                        
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="reciever_lname">Lastname *</label>
                        <input id="r_lname" type="text" name="r_lname" class="form-control" placeholder="Please enter  lastname *" required="required" data-error="Lastname is required.">
                                                        </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="reciever_email">Email *</label>
                        <input id="r_email" type="email" name="r_email" class="form-control" placeholder="Please enter email *" required="required" data-error="Valid email is required.">
                        
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="reciever_phone">Mobile Phone # *</label>
                        <input id="r_tel" type="tel" name="r_tel" class="form-control" placeholder="Please enter cell phone # *" required="required" data-error="Valid phone # is required.">
                        
                    </div>
                </div>
            </div>
            <div class="row">
              <div class="col-md-6">
                  <div class="form-group">
                     <p class="font-weight-bold">Hold Information:</p>
                      
                  </div>
              </div>
          </div>
    <div class="row">
      <div class="col-md-6">
          <div class="form-group">
              <label for="h_minutes"></label>Units of Time<br>
              <input type="number" id="time_units" name="time_units" class="form-control" max="365"><br>
              
          </div>
      </div>
                <div class="col-md-6">
                  <div class="form-group">
                      <label for="payment_status_label">Payment</label><br>
                      <label>
                          <input type="radio" name="payment" value="COD"> COD

                      </label><br>
                  </div>
                  <div class="form-group">
                      <label for="rate_type_label">Rate Type*</label><br>
                      <label>
                          <input type="radio" name="rate_type" value="Daily" required> Daily
                          <input type="radio" name="rate_type" value="Hourly" required> Hourly 
                      </label><br>
                      
                  </div>
              </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label for="package_description">Package Description *</label>
                        <textarea id="package_description" name="package_description" class="form-control" placeholder="Write the description here." rows="4" required="required" data-error="Please, leave us a message."></textarea
                            >
                        </div>
  
                    </div>
  
  
                <div class="col-md-12">
                    
                    <input type="submit" class="btn btn-success btn-send  pt-2 btn-block
                        " value="Submit" >
                
            </div>
      
            </div>
  
  
    </div>
     </form>
    </div>
        </div>
  
  
  </div>
    <!-- /.8 -->
  
  </div>
  <!-- /.row-->
  
  </div>
  </div>
  